{% extends 'base_affiliates.html.twig' %}
{% block title %}{{ translations.find(null, 'meta_title_home_affiliates').getTranslation() }}{% endblock %}
{% block meta_description %}{{ translations.find(null, 'meta_description_home_affiliates').getTranslation() }}{% endblock %}
{% block content %}
    <article>
        <div class="homePrev animBG">
            <div class="containerIn">
                <div class="contPrev">
                    <h1>{{ translations.find(null, 'home_title_affiliates').getTranslation() }}</h1>
                    <p>{{ translations.find(null, 'home_title2_affiliates').getTranslation() }}</p>
                    <div class="callBtnImg">
                        <div class="contenedor">
                            <div class="datos">
                                <a class="btnXtraIcon" href="{{ path('affiliates_registro_'~ language) }}" title="{{ translations.find(null, 'sign_up_affiliates').getTranslation() }}">{{ translations.find(null, 'sign_up_affiliates').getTranslation() }}<i class="icon-dir-right"></i></a>
                            </div>
                            <div class="img">
                                <img src="{{ asset('assets/img/affiliates/banners/betandeal-winner.webp') }}" width="262" height="250" alt="BETANDEAL WINNER">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <picture class="prevImg">
                <source media="(min-width:650px)" srcset="{{ asset('assets/img/affiliates/contenido/home-betandeal-affiliates-presentacion-xl.webp') }}" width="1370" height="768">
                <img src="{{ asset('assets/img/affiliates/contenido/home-betandeal-affiliates-presentacion.webp') }}" width="600" height="620" alt="BETANDEAL AFFILIATES">
            </picture>
        </div>

        <hr class="break">

        <div class="container">
            <section class="containerIn">
                <h2 class="hFX">{{ translations.find(null, 'home_title_bookmakers_affiliates').getTranslation() }}</h2>
                <h3>{{ translations.find(null, 'home_description_bookmakers_affiliates').getTranslation() }}</h3>
                <p>{{ translations.find(null, 'home_description_2_bookmakers_affiliates').getTranslation() }}</p>
                <div class="logosGaleria">
                    <div class="rail">
                        {% for house in casas %}
                            <img loading="lazy" class="itemLogo item{{ loop.index }}" src="{{ asset(house.image_lazy) }}" width="137" height="58" alt="{{house.id}}">
                        {% endfor %}
                    </div>
                </div>
            </section>
        </div>

        <hr class="breakXL">

        <div class="container">
            <section class="containerIn">
                <h2 class="hFX">{{ translations.find(null, 'home_title_commisions_affiliates').getTranslation() }}</h2>
                <h3>{{ translations.find(null, 'home_title_2_commisions_affiliates').getTranslation() }}</h3>
                <p>{{ translations.find(null, 'home_details_rules_commisions_affiliates').getTranslation() }}</p>
                <p>{{ translations.find(null, 'home_details_commisions_affiliates').getTranslation() }}</p>
                <div class="homeComisiones">
                    <div class="item">
                        <strong>{{ translations.find(null, 'home_campaign_sports_affiliates').getTranslation() }}</strong>
                        <img loading="lazy" src="{{ asset('assets/img/affiliates/contenido/betandeal-home-deporte.webp') }}" width="354" height="250" alt="{{ translations.find(null, 'home_campaign_sports_affiliates').getTranslation() }}">
                    </div>
                    <div class="item">
                        <strong>{{ translations.find(null, 'home_campaign_casino_affiliates').getTranslation() }}</strong>
                        <img loading="lazy" src="{{ asset('assets/img/affiliates/contenido/betandeal-home-casino.webp') }}" width="354" height="250" alt="{{ translations.find(null, 'home_campaign_casino_affiliates').getTranslation() }}">
                    </div>
                    <div class="item">
                        <strong>{{ translations.find(null, 'home_campaign_poker_affiliates').getTranslation() }}</strong>
                        <img loading="lazy" src="{{ asset('assets/img/affiliates/contenido/betandeal-home-poker.webp') }}" width="354" height="250" alt="{{ translations.find(null, 'home_campaign_poker_affiliates').getTranslation() }}">
                    </div>
                </div>
            </section>
        </div>

        <hr class="breakXL">

        <div class="container">
            <section class="containerIn">
                <h2 class="hFX">{{ translations.find(null, 'home_title_advantages_affiliates').getTranslation() }}</h2>
                <p>{{ translations.find(null, 'home_description_advantages_affiliates1').getTranslation() }}<a href="{{ path('affiliates_afiliacion_betandeal_'~ language) }}">{{ translations.find(null, 'home_description_advantages_affiliates2').getTranslation() }}</a>{{ translations.find(null, 'home_description_advantages_affiliates3').getTranslation() }}</p>
                <div class="homeVentajas scrollH">
                    <div class="item">
                        <div class="img">
                            <img loading="lazy" src="{{ asset('assets/img/affiliates/contenido/betandeal-home-ventajas-casas-apuestas.webp') }}" width="400" height="250" alt="{{ translations.find(null, 'home_div1_title_advantages_affiliates').getTranslation() }}{{ translations.find(null, 'campaigns').getTranslation() }}">
