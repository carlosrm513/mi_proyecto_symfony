                        </div>
                        <div class="txt">
                            <h4 class="titulo">Borja Olivares <img loading="lazy" src="{{ asset('assets/img/affiliates/contenido/banderas/es.png') }}" width="72" height="48" alt="ES"></h4>
                            <p>"{{ translations.find(null, 'index_opinion2_affiliates').getTranslation() }}".</p>
                        </div>
                    </div>
                    #}
                    <div class="tipsterBox">
                        <div class="img">
                            <img loading="lazy" src="{{ asset('assets/img/affiliates/contenido/tipsters/tipster-bruxo-tips.webp') }}" width="120" height="120" alt="Bruxo Tips">
                        </div>
                        <div class="txt">
                            <h4 class="titulo">Bruxo Tips <img loading="lazy" src="{{ asset('assets/img/affiliates/contenido/banderas/br.png') }}" width="72" height="48" alt="BR"></h4>
                            <p>"{{ translations.find(null, 'index_opinion4_affiliates').getTranslation() }}".</p>
                        </div>
                    </div>
                    <div class="tipsterBox">
                        <div class="img">
                            <img loading="lazy" src="{{ asset('assets/img/affiliates/contenido/tipsters/tipster-el-apostador.webp') }}" width="120" height="120" alt="Pablo Herrera">
                        </div>
                        <div class="txt">
                            <h4 class="titulo">Pablo Herrera <img loading="lazy" src="{{ asset('assets/img/affiliates/contenido/banderas/co.png') }}" width="72" height="48" alt="ES"></h4>
                            <p>"{{ translations.find(null, 'index_opinion3_affiliates').getTranslation() }}".</p>
                        </div>
                    </div>
                </div>
            </section>
        </div>

        <hr class="breakXL">

        <div class="container">
            <section class="containerIn">
                <h2 class="hFX">{{ translations.find(null, 'home_gamechanger_title_affiliates').getTranslation() }}</h2>
                <h3>{{ translations.find(null, 'home_start_title_affiliates').getTranslation() }}</h3>
                <div class="containerX2">
                    <div>
                        <ol class="listRegistro">
                            <li><span class="num">1</span><div class="txt"><h4>{{ translations.find(null, 'inscreverse_caps').getTranslation() }}</h4> {{ translations.find(null, 'home_description_register_affiliates').getTranslation() }}</div></li>
