                        <p>{{ translations.find(null, 'home_div1_description1_advantages_affiliates').getTranslation() }}</p>
                        <p>{{ translations.find(null, 'home_div1_description2_advantages_affiliates').getTranslation() }}</p>
                    </div>
                    <div class="item">
                        <div class="img">
                            <img loading="lazy" src="{{ asset('assets/img/affiliates/contenido/betandeal-home-ventajas-pagos.webp') }}" width="400" height="250" alt="{{ translations.find(null, 'home_div2_title1_advantages_affiliates').getTranslation() }} {{ translations.find(null, 'pagos').getTranslation() }}">
                        </div>
                        {% if language == 'en' %}
                            <h3>{{ translations.find(null, 'home_div2_title1_advantages_affiliates').getTranslation() }} <strong>{{ translations.find(null, 'pagos').getTranslation() }}</strong></h3>
                        {% else %}
                            <h3><strong>{{ translations.find(null, 'pagos').getTranslation() }}</strong> {{ translations.find(null, 'home_div2_title1_advantages_affiliates').getTranslation() }}</h3>
                        {% endif %}
                        <p>{{ translations.find(null, 'home_div2_description_advantages_affiliates').getTranslation() }}</p>
                    </div>
                    <div class="item">
                        <div class="img">
                            <img loading="lazy" src="{{ asset('assets/img/affiliates/contenido/betandeal-home-ventajas-soporte.webp') }}" width="400" height="250" alt="{{ translations.find(null, 'dedicado').getTranslation() }} {{ translations.find(null, 'soporte').getTranslation() }}">
                        </div>
                        {% if language == 'en' %}
                            <h3>{{ translations.find(null, 'dedicado').getTranslation() }} <strong>{{ translations.find(null, 'soporte').getTranslation() }}</strong></h3>
                        {% else %}
                            <h3><strong>{{ translations.find(null, 'soporte').getTranslation() }}</strong> {{ translations.find(null, 'dedicado').getTranslation() }}</h3>
                        {% endif %}
                        <p>{{ translations.find(null, 'home_div3_description_advantages_affiliates').getTranslation() }}</p>
                    </div>
                </div>
            </section>
        </div>

        <div class="callRegistro animBG">
            <div class="logo">
                <img src="{{ asset('assets/img/affiliates/logo-betandeal-affiliates.svg') }}" width="145" height="34" alt="BETANDEAL AFILIATES">
            </div>
            <div class="txt">
                <h2>{{ translations.find(null, 'home_blue_div_affiliates').getTranslation() }}</h2>
            </div>
            <div class="btns">
                <a class="btn" href="{{ path('affiliates_registro_'~ language) }}" title="{{ translations.find(null, 'apostar').getTranslation() }}">{{ translations.find(null, 'inscreverse').getTranslation() }}</a>
            </div>
        </div>

        <hr class="breakXL">

        <div class="container bgColor1">
            <section class="containerIn">
                <h2 class="hFX">{{ translations.find(null, 'home_talent_title_affiliates').getTranslation() }}</h2>
                <h3>{{ translations.find(null, 'home_talent_question_affiliates').getTranslation() }}</h3>
