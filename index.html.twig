                    <h2 class="hFX">{{ translations.find(null, 'home_faqs_title_affiliates').getTranslation() }}</h2>
                    <h3>{{ translations.find(null, 'home_faqs_title2_affiliates').getTranslation() }}</h3>
                    <p>{{ translations.find(null, 'home_faqs_description_affiliates').getTranslation() }}</p>
